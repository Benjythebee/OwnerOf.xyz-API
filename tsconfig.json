{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "paths": { "*": ["node_modules/*"] }
  },
  "include": ["src/**/*"]
}
